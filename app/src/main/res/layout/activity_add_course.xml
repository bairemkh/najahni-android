<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.addCourse.AddCourseActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <FrameLayout
        android:id="@+id/addCourseFrameLayout"
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="6"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/pervBtnAddCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:animateLayoutChanges="true"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/primary_color"
            android:textSize="23dp"
            android:text="@string/returnBack"/>
        <TextView
            android:id="@+id/confirmBtnAddCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:animateLayoutChanges="true"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/primary_color"
            android:textSize="23dp"
            android:text="Confirm"/>
        <TextView
            android:id="@+id/nextBtnAddCourse"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/primary_color"
            android:textSize="23dp"
            android:animateLayoutChanges="true"
            android:textAlignment="center"
            android:text="@string/next"/>
    </LinearLayout>
</LinearLayout>
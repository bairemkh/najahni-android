<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="30dp"
    android:orientation="vertical">
<LinearLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/questionTitleQuizCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/primary_color"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:text="Question"/>
    <TextView
        android:id="@+id/numberOfPropsQuizCard"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="19sp"
        android:text="5 propositions"/>
    <TextView
        android:id="@+id/answerQuizCard"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="19sp"
        android:text="Answer: proposition 4"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/deleteQuestionQuizCard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/remove"
            app:tint="@color/danger" />
        <ImageView
            android:id="@+id/editQuestionQuizCard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/edit"
            app:tint="@color/secondary_color" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
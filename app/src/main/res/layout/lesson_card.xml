<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/sectionNameLessonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section 1"
        android:fontFamily="@font/montserrat_extrabold"
        android:layout_margin="20dp"
        android:textSize="27dp"
        android:textColor="@color/secondary_color"
        />
    <LinearLayout
        android:id="@+id/cardLessonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="10dp"
        android:weightSum="7"
        android:paddingHorizontal="10dp">
        <TextView
            android:id="@+id/lessonIndexList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:text="1"
            android:padding="5dp"
            android:textColor="@color/primary_color"
            android:textSize="30dp"
            android:background="@drawable/circle_background"
            android:fontFamily="@font/montserrat_bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="6"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lessonNameList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Lesson name"/>
            <TextView
                android:id="@+id/lessonDurationList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_regular"
                android:text="Duration"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/lessonIsUnlockedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_lock_24"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            app:tint="@color/primary_color" />
    </LinearLayout>

</LinearLayout>
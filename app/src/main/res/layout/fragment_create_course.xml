<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".views.addCourse.CreateCourseFragment">
    <ImageView
        android:layout_width="720px"
        android:layout_height="480px"
        android:scaleType="centerCrop"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:src="@drawable/placeholder_error"
        />
    <EditText
        android:id="@+id/nameSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_background"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/course_title"
        android:inputType="textCapWords"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginVertical="20dp"
        android:hint="Write a description for the course"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="text|textMultiLine"
        android:gravity="top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/price"
            android:drawableEnd="@drawable/baseline_attach_money_24"
            android:drawablePadding="20dp"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:textSize="18sp" />
        <Spinner
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
</LinearLayout>